import("//build/test.gni")
import("//src/sys/build/components.gni")

test("fvm-driver-unittests-bin") {
  output_name = "fvm-driver-unittests"
  configs += [ "//build/unification/config:zircon-migrated" ]
  sources = [
    "block-device-test.cc",
    "slice-extent-test.cc",
  ]
  include_dirs = [ ".." ]
  deps = [
    "//src/devices/block/drivers/fvm:shared",
    "//src/devices/testing/no_ddk",
    "//zircon/public/lib/zxtest",
  ]
}

fuchsia_unittest_package("fvm-driver-unittests") {
  executable_path = "test/fvm-driver-unittests"
  deps = [ ":fvm-driver-unittests-bin" ]
}
