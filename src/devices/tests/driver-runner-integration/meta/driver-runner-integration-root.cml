{
    children: [
        {
            name: "driver_manager",
            url: "#meta/driver-manager-component.cm",
            startup: "eager",
            environment: "#driver_manager-env",
        },
        {
            name: "driver_index",
            url: "#meta/driver-index.cm",
        },
        {
            name: "driver-manager-support",
            url: "#meta/driver-manager-support.cm",
        },
    ],
    collections: [
        {
            name: "driver_hosts",
            environment: "#driver_host-env",
            durability: "transient",
        },
        {
            name: "boot-drivers",
            environment: "#driver-env",
            durability: "transient",
        },
        {
            name: "pkg-drivers",
            environment: "#driver-env",
            durability: "transient",
        },
    ],
    offer: [
        {
            protocol: [
                "fuchsia.process.Launcher",
                "fuchsia.sys.Launcher",
            ],
            from: "parent",
            to: "#driver_manager",
        },
        {
            protocol: "fuchsia.sys2.Realm",
            from: "framework",
            to: "#driver_manager",
        },
        {
            protocol: "fuchsia.driver.framework.DriverIndex",
            from: "#driver_index",
            to: "#driver_manager",
        },
        {
            directory: "pkgfs-delayed",
            from: "#driver-manager-support",
            to: [ "#driver_manager" ],
        },
        {
            directory: "system-delayed",
            from: "#driver-manager-support",
            to: [ "#driver_manager" ],
        },
        {
            protocol: [
                "fuchsia.boot.Arguments",
                "fuchsia.boot.Items",
                "fuchsia.kernel.RootJob",
                "fuchsia.power.manager.DriverManagerRegistration",
            ],
            from: "#driver-manager-support",
            to: "#driver_manager",
        },
        {
            protocol: [ "fuchsia.logger.LogSink" ],
            from: "parent",
            to: [
                "#boot-drivers",
                "#driver-manager-support",
                "#driver_hosts",
                "#driver_index",
                "#driver_manager",
                "#pkg-drivers",
            ],
        },
    ],
    environments: [
        {
            name: "driver_manager-env",
            extends: "realm",

            // 1 minute
            __stop_timeout_ms: 60000,
        },
        {
            name: "driver_host-env",
            extends: "realm",

            // 2 seconds
            __stop_timeout_ms: 2000,
        },
        {
            name: "driver-env",
            extends: "realm",
            runners: [
                {
                    runner: "driver",
                    from: "#driver_manager",
                },
            ],

            // 1 second
            __stop_timeout_ms: 1000,
        },
    ],
}
