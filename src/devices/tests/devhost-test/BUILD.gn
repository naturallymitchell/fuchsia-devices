migrated_manifest("devhost-test-manifest") {
  deps = [ ":devhost-test" ]
}

migrated_manifest("devhost-test-manual-manifest") {
  deps = [ ":devhost-test-manual" ]
}

migrated_manifest("devhost-test-child-manifest") {
  deps = [ ":devhost-test-child" ]
}
