import("//build/components.gni")
import("//build/config/fuchsia/rules.gni")
import("//build/rust/rustc_test.gni")
import("//build/test.gni")

group("tests") {
  testonly = true
  deps = [ ":ddk-packages-test-package" ]
}

fuchsia_test_component("packages-test-component") {
  component_name = "packages-test-component"
  manifest = "meta/packages-test.cml"
  deps = [ ":packages_test" ]
}

rustc_test("packages_test") {
  edition = "2018"
  source_root = "test.rs"

  deps = [
    "//garnet/lib/rust/files_async",
    "//garnet/lib/rust/io_util",
    "//sdk/fidl/fuchsia.device.manager:fuchsia.device.manager-rustc",
    "//sdk/fidl/fuchsia.io:fuchsia.io-rustc",
    "//sdk/fidl/fuchsia.io2:fuchsia.io2-rustc",
    "//sdk/fidl/fuchsia.sys2:fuchsia.sys2-rustc",
    "//src/devices/tests/ddk-firmware-test:fuchsia.device.firmware.test-rustc",
    "//src/lib/diagnostics/reader/rust",
    "//src/lib/fdio/rust:fdio",
    "//src/lib/fidl/rust/fidl",
    "//src/lib/fuchsia",
    "//src/lib/fuchsia-component",
    "//src/lib/storage/fuchsia-vfs-watcher",
    "//src/lib/storage/vfs/rust:vfs",
    "//src/lib/zircon/rust:fuchsia-zircon",
    "//src/sys/lib/directory_broker",
    "//src/sys/lib/fuchsia-component-test",
    "//third_party/rust_crates:anyhow",
    "//third_party/rust_crates:futures",
  ]

  sources = [ "test.rs" ]
}

fuchsia_test_component("driver-manager-realm") {
  manifest = "meta/driver-manager-realm.cml"
}

fuchsia_test_package("ddk-packages-test-package") {
  package_name = "ddk-packages-test"
  test_components = [ ":packages-test-component" ]
  deps = [
    ":driver-manager-realm",
    "//src/devices/tests/ddk-firmware-test:ddk-firmware-test",
    "//src/devices/tests/ddk-firmware-test:test-firmware-file",
    "//src/lib/isolated_devmgr/v2_component:driver-manager-support",
    "//src/lib/isolated_devmgr/v2_component:driver-manager-test",
  ]
}
