{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["name", "expected", "device"],
    "properties": {
      "name": {
        "type": "string"
      },
      "expected": {
        "type": "string",
        "enum": [ "match", "abort" ]
      },
      "device": {
        "type": "object",
        "additionalProperties": { "type": "string" }
      }
    },
    "additionalProperties": false
  }
}