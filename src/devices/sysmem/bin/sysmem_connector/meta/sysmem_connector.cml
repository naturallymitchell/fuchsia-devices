{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/sysmem_connector",
    },
    capabilities: [
        {
            protocol: [ "fuchsia.sysmem.Allocator" ],
        },
    ],
    use: [
        {
            protocol: [ "fuchsia.tracing.provider.Registry" ],
        },
        {
            directory: "dev-sysmem",
            rights: [ "r*" ],
            path: "/dev/class/sysmem",
        },
    ],
    expose: [
        {
            protocol: "fuchsia.sysmem.Allocator",
            from: "self",
        },
    ],
}
