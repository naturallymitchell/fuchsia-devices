import("//build/config/fuchsia/zircon_images.gni")
import("//build/test.gni")
import("//build/test/test_package.gni")
import("//build/testing/environments.gni")

group("tests") {
  testonly = true

  deps = [ ":register-util-test-package" ]
}

test("bin") {
  testonly = true
  output_name = "register-util-test"
  visibility = [ ":*" ]

  sources = [
    "register-util-test.cc",
    "register-util.cc",
  ]

  deps = [
    "//sdk/fidl/fuchsia.hardware.registers:fuchsia.hardware.registers_llcpp",
    "//sdk/lib/fdio",
    "//zircon/public/lib/async",
    "//zircon/public/lib/async-cpp",
    "//zircon/public/lib/runtime",
    "//zircon/public/lib/zxtest",
    "//zircon/system/ulib/async-loop:async-loop-cpp",
  ]
}

test_package("register-util-test-package") {
  deps = [ ":bin" ]

  binaries = [
    {
      name = "register-util-test"
    },
  ]

  tests = [
    {
      name = "register-util-test"
      environments = basic_envs
    },
  ]
}

executable("register-util") {
  configs += [ "//build/unification/config:zircon-migrated" ]
  sources = [
    "main.cc",
    "register-util.cc",
  ]
  deps = [
    "//sdk/fidl/fuchsia.hardware.registers:fuchsia.hardware.registers_llcpp",
    "//sdk/lib/fdio",
    "//zircon/public/lib/pretty",
  ]
}

package("register-util-package") {
  deps = [ ":register-util" ]

  binaries = [
    {
      name = "register-util"
      shell = true
    },
  ]
}
