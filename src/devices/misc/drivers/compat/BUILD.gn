import("//build/components.gni")
import("//build/drivers.gni")

group("compat") {
  # NOTE(abdulla): Intentionally empty until we have the driver module target.
}

fuchsia_driver("compat_driver") {
  output_name = "compat"
  # NOTE(dgilhooley): This is empty for now. We need to at least have this
  # empty .so so the Component Manifests are pointing to a valid file.
}

group("tests") {
  testonly = true
  deps = [ ":compat-test" ]
}

source_set("lib") {
  sources = [
    "device.cc",
    "device.h",
    "loader.cc",
    "loader.h",
  ]
  public_deps = [
    "//sdk/lib/stdcompat",
    "//src/devices/lib/driver2:llcpp",
    "//src/lib/ddk",
  ]
}

executable("unittests") {
  testonly = true
  output_name = "compat_test"

  sources = [
    "device_test.cc",
    "loader_test.cc",
  ]

  deps = [
    ":lib",
    "//src/lib/fxl/test:gtest_main",
    "//src/lib/testing/loop_fixture",
  ]
}

fuchsia_unittest_package("compat-test") {
  manifest = "meta/compat-test.cml"
  deps = [ ":unittests" ]
}
